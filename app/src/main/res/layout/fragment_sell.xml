<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo_apki2">

    <TextView
        android:id="@+id/textViewStart"
        android:textColor="@color/colorPrimary"
        android:layout_width="308dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="670dp"
        android:text="Put your product for auction"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="251dp"
        android:text="Product Name"
        android:textColor="@color/colorAccent"
        android:drawableLeft="@drawable/ic_local_grocery_store_black_24dp"
        android:background="@color/colorText"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editTextProductName"
        android:hint="Enter Product Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="107dp"
        android:background="@drawable/tlo_opisu"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="375dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/tlo_opisu"
        android:ems="10"
        android:hint="Enter Product Description"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonPut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_round"
        android:text="Put for auction"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/textViewSubcategory"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="157dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="137dp"
        android:text="Subcategory"
        android:textSize="17dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewDecreasePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="474dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="23dp"
        android:text="That price will decrease by 5$ per 5 minutes."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <EditText
        android:id="@+id/editTextStartingPrice"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="423dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="1000" />

    <TextView
        android:id="@+id/textViewStartingPrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="265dp"
        android:layout_marginRight="265dp"
        android:text="Starting Price"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/editTextFinalPrice"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="500" />

    <TextView
        android:id="@+id/textViewFinalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="167dp"
        android:layout_marginLeft="167dp"
        android:layout_marginTop="401dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:text="Final Price"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="293dp"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="420dp"
        android:ems="10"
        android:inputType="number"
        android:text="2" />

    <TextView
        android:id="@+id/textViewDays"
        android:layout_width="42dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="433dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_toEndOf="@+id/editTextTime"
        android:layout_toRightOf="@+id/editTextTime"
        android:text="Days" />

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="293dp"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="277dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="156dp"
        android:text="Category"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinnerSubcategory"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="373dp"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="318dp" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextProductName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:drawableLeft="@drawable/ic_font_download_black_24dp"
        android:background="@color/colorText"
        android:text="Description"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />


</RelativeLayout>