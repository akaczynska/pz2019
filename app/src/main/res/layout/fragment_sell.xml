<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginEnd="248dp"
        android:layout_marginRight="248dp"
        android:layout_marginBottom="578dp"
        android:text="Product Name" />

    <TextView
        android:id="@+id/textViewStart"
        android:layout_width="296dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="606dp"
        android:text="Put your product for auction"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="236dp"
        android:layout_marginBottom="17dp"
        android:text="Description" />

    <TextView
        android:id="@+id/textViewStartingPrice"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextStartingPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:layout_marginBottom="18dp"
        android:text="Starting Price" />

    <TextView
        android:id="@+id/textViewFinalPrice"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextFinalPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:layout_marginBottom="12dp"
        android:text="Final Price" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginEnd="229dp"
        android:layout_marginRight="229dp"
        android:layout_marginBottom="13dp"
        android:text="Time" />

    <EditText
        android:id="@+id/editTextProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewProductName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="-82dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
    android:id="@+id/textViewDecreasePrice"
    android:layout_width="147dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="13dp"
    android:layout_marginLeft="13dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="320dp"
    android:layout_toEndOf="@+id/editTextFinalPrice"
    android:layout_toRightOf="@+id/editTextFinalPrice"
    android:text="That price will decrease by 5$ per 5 minutes." />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginBottom="420dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextStartingPrice"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewFinalPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1000" />

    <TextView
        android:id="@+id/textViewDays"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPut"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="196dp"
        android:layout_marginRight="196dp"
        android:layout_marginBottom="156dp"
        android:layout_toEndOf="@+id/editTextTime"
        android:layout_toRightOf="@+id/editTextTime"
        android:text="Days" />

    <EditText
        android:id="@+id/editTextFinalPrice"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPut"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="151dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="500" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="143dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2" />

    <Button
        android:id="@+id/buttonPut"
        android:layout_width="338dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="41dp"
        android:text="Put for auction" />

</RelativeLayout>