<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/product_item_look">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/product_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/image_product"/>

    <TextView
        android:id="@+id/textViewProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_image"
        android:text="@string/product_name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewPrice"
        android:background="@drawable/edit_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textViewProduct"
        android:layout_toRightOf="@+id/textViewProduct"
        android:text="@string/product_price"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewProduct"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_image"
        android:text="@string/product_time"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textViewTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewProduct"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_image"
        android:text="@string/product_time"
        android:textSize="15dp" />


    <Button
        android:id="@+id/buttonAuction"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="272dp"
        android:layout_marginLeft="272dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_round"
        android:text="@string/auction" />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="334dp"
        android:layout_marginLeft="334dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="340dp"
        android:background="@drawable/button_round"
        android:onClick="openHistory"
        android:text="History" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button_round" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button_round" />

</RelativeLayout>